<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="using:FFXIVInjector.UI.Services"
        x:Class="FFXIVInjector.UI.Views.ConfirmWindow"
        Title="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ConfirmWindow.Title]}" 
        Width="400" SizeToContent="Height"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="Full"
        ExtendClientAreaToDecorationsHint="True">

    <Grid RowDefinitions="Auto, Auto" Margin="30">
        
        <StackPanel Grid.Row="0" Margin="0,10,0,30" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="TitleText" Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ConfirmWindow.Header]}" 
                       FontSize="18" FontWeight="Bold" 
                       TextAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Name="MessageText" Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ConfirmWindow.Message]}" 
                       FontSize="14" 
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       TextWrapping="Wrap" TextAlignment="Center"
                       LineHeight="22"/>
        </StackPanel>

        <Grid Grid.Row="1" ColumnDefinitions="*, 15, *">
            <Button Name="NoButton" Grid.Column="0" Content="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ConfirmWindow.Button.No]}" 
                    HorizontalAlignment="Stretch" Height="40"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    CornerRadius="6"/>
            
            <Button Name="YesButton" Grid.Column="2" Content="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[ConfirmWindow.Button.Yes]}" 
                    HorizontalAlignment="Stretch" Height="40"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    Background="{DynamicResource SystemAccentColor}" 
                    Foreground="White" FontWeight="Bold"
                    CornerRadius="6"/>
        </Grid>
    </Grid>
</Window>