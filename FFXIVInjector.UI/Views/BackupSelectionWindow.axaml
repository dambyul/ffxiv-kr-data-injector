<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="using:FFXIVInjector.UI.Services"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:FFXIVInjector.UI.Views"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="450"
        Width="450" Height="450"
        MinWidth="450" MaxWidth="450"
        MinHeight="400"
        WindowStartupLocation="CenterOwner"
        x:Class="FFXIVInjector.UI.Views.BackupSelectionWindow"
        x:DataType="views:BackupSelectionWindow"
        Title="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[BackupWindow.Title]}"
        SystemDecorations="Full"
        ExtendClientAreaToDecorationsHint="True">

    <Grid RowDefinitions="Auto, *, Auto" Margin="25">

        <StackPanel Grid.Row="0" Margin="0,10,0,20">
            <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[BackupWindow.Header]}" FontSize="22" FontWeight="Bold"/>
            <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[BackupWindow.Subtitle]}" 
                       FontSize="13" Opacity="0.6" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="1" CornerRadius="8" ClipToBounds="True">
            
            <Grid>
                <ListBox x:Name="BackupListBox" 
                         Background="Transparent" 
                         SelectionMode="Single"
                         Padding="10"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,0,0,8"/>
                            <Setter Property="CornerRadius" Value="6"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>

                        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                        <Style Selector="ListBoxItem:pointerover Border#ItemBorder">
                            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
                        </Style>

                        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                        <Style Selector="ListBoxItem:selected Border#ItemBorder">
                            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
                        </Style>
                    </ListBox.Styles>

                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="views:BackupItem">
                            <Border Name="ItemBorder"
                                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="15,12">
                                
                                <Grid ColumnDefinitions="Auto, *, Auto, Auto">
                                    
                                    <TextBlock Grid.Column="0" Text="ðŸ“¦" 
                                               FontSize="18" VerticalAlignment="Center" 
                                               Margin="0,0,15,0" Opacity="0.8"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding SizeDisplay}" FontSize="10" 
                                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                                   FontWeight="SemiBold" Margin="0,0,0,2"/>
                                        <TextBlock Text="{Binding Id}" 
                                                   FontFamily="Consolas, Cascadia Code, Monospace" 
                                                   FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>

                                    <Button Grid.Column="2" 
                                            Click="OnRenameClick" Tag="{Binding}"
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            Padding="8"
                                            CornerRadius="4"
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#1A0000FF"/> </Style>
                                            <Style Selector="Button:pointerover TextBlock">
                                                <Setter Property="Foreground" Value="#5252FF"/> </Style>
                                        </Button.Styles>
                                        
                                        <TextBlock Text="âœï¸" FontSize="16" Opacity="0.6"/> 
                                    </Button>

                                    <Button Grid.Column="3" 
                                            Click="OnDeleteClick" Tag="{Binding}"
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            Padding="8"
                                            CornerRadius="4"
                                            VerticalAlignment="Center">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#1AFF0000"/> </Style>
                                            <Style Selector="Button:pointerover TextBlock">
                                                <Setter Property="Foreground" Value="#FF5252"/> </Style>
                                        </Button.Styles>
                                        
                                        <TextBlock Text="ðŸ—‘" FontSize="16" Opacity="0.6"/> 
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
                            IsVisible="{Binding IsEmpty}">
                    <TextBlock Text="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[BackupWindow.List.Empty]}" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2" ColumnDefinitions="*,10,*" Margin="0,20,0,0">
            <Button Grid.Column="0" Content="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[BackupWindow.Button.Cancel]}" Click="OnCancelClick" 
                    HorizontalAlignment="Stretch" Height="40"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    CornerRadius="6"/>

            <Button Grid.Column="2" Content="{Binding Source={x:Static services:LocalizationService.Instance}, Path=[BackupWindow.Button.Restore]}" Click="OnRestoreClick" 
                    IsEnabled="{Binding !IsEmpty}"
                    HorizontalAlignment="Stretch" Height="40"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    Background="{DynamicResource SystemAccentColor}" 
                    Foreground="White" FontWeight="Bold"
                    CornerRadius="6"/>
        </Grid>

    </Grid>
</Window>